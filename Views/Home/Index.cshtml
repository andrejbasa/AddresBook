<p>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

  <a href='@Url.Action("Add", "Home")'  class="btn btn-default btn-sm" onclick=""><span class="glyphicon glyphicon-plus"></span> Create new contact</a>

</p>

<div ng-app="AppController">
  <div ng-controller="Controller">
    <table class="table table-striped table-bordered table-hover table-checkable datatable">
      <thead class="grid-top-panel">
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address</th>
          <th>City</th>
          <th>Zip Code</th>
          <th>Phone number</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="dataModel in contacts" >
          <td>{{dataModel.Id}}</td>
          <td>{{dataModel.FirstName}}</td>
          <td>{{dataModel.LastName}}</td>
          <td>{{dataModel.Address}}</td>
          <td>{{dataModel.City}}</td>
          <td>{{dataModel.ZipCode}}</td>
          <td>{{dataModel.PhoneNum}}</td>
          <td><a ng-href="/Home/View/{{dataModel.Id}}" class="btn btn-default">View</a><a class="btn btn-default" ng-href="/Home/Edit/{{dataModel.Id}}">Edit</a><a  ng-click="delete(dataModel)" class="btn btn-default">Delete</a></td>

        </tr>
      </tbody>
    </table>
  </div>
</div>
<script src="../Scripts/angular-route.js"></script>
<script src="~/FrontEnd/AngularScripts/app.js"></script>
<script src="~/FrontEnd/AngularScripts/Controller.js"></script>
<script src="../Scripts/angular.js"></script>
